{
    "name": "wavey/laravel-gravatar",
    "description": "Beautiful Laravel Wrapper for Gravtar",
    "keywords": [
        "laravel",
        "gravtar",
        "wavey"
    ],
    "homepage": "https://github.com/waveygroup/laravel-gravatar",
    "license": "MIT",
    "authors": [
        {
            "name": "Kieran Heron",
            "email": "kieran@wavey.group",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Wavey\\LaravelGravatar\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Wavey\\LaravelGravatar\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        },
        "laravel": {
            "providers": [
                "Wavey\\LaravelGravatar\\GravatarServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
